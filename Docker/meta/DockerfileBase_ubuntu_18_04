FROM ubuntu:18.04

ARG LAST_RUN_OF_BASE=2019-04-09

RUN apt-get update && apt-get -y upgrade && \
    apt-get install -y git maven && \
    apt-get install -y python-pip && \
    apt-get install -y libusb-0.1-4 && \
    apt-get install -y gcc-avr binutils-avr gdb-avr avr-libc avrdude && \
    apt-get install -y nbc && \
    apt-get install -y gcc-arm-none-eabi srecord libssl-dev && \
    pip install uflash && \
    apt-get update && apt-get -y upgrade && \
    apt-get install -y openjdk-8-jdk && \
    update-java-alternatives -s java-1.8.0-openjdk-amd64 && \
    apt-get install -y wget && \
    apt-get clean

RUN git config --global core.fileMode false && \
    git config --global user.email "reinhard.budde@iais.fraunhofer.de" && \
    git config --global user.name "Reinhard Budde"

WORKDIR /tmp
RUN wget http://de.archive.ubuntu.com/ubuntu/pool/universe/n/newlib/libnewlib-dev_3.0.0.20180802-2_all.deb && \
    wget http://de.archive.ubuntu.com/ubuntu/pool/universe/n/newlib/libnewlib-arm-none-eabi_3.0.0.20180802-2_all.deb && \
    dpkg -i libnewlib-dev_3.0.0.20180802-2_all.deb libnewlib-arm-none-eabi_3.0.0.20180802-2_all.deb && \
    rm libnewlib-dev_3.0.0.20180802-2_all.deb libnewlib-arm-none-eabi_3.0.0.20180802-2_all.deb
    
WORKDIR /opt/ora-CCresources/
COPY ./ ./
RUN cd /opt/ora-CCresources/RobotArdu/arduino-builder/linux;     chmod ugo+rx arduino-builder     tools-builder/ctags/5.8*/ctags     && \
    cd /opt/ora-CCresources/RobotArdu/arduino-builder/linux-arm; chmod ugo+rx arduino-builder     tools-builder/ctags/5.8*/ctags     && \
    cd /opt/ora-CCresources/RobotArdu/arduino-builder/osx;       chmod ugo+rx arduino-builder     tools-builder/ctags/5.8*/ctags     && \
    cd /opt/ora-CCresources/RobotArdu/arduino-builder/windows;   chmod ugo+rx arduino-builder.exe tools-builder/ctags/5.8*/ctags.exe && \
    cd /opt/ora-CCresources/RobotMbed;                           chmod ugo+rx compile* && \
    cd /opt/ora-CCresources/RobotNXT;                            chmod ugo+rx osx/* windows/*

ENV robot_crosscompiler_resourcebase=/opt/ora-CCresources/
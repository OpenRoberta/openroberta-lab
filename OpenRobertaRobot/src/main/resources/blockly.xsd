<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns="http://de.fhg.iais.roberta.blockly"
	targetNamespace="http://de.fhg.iais.roberta.blockly"
	elementFormDefault="qualified">
	<xs:element name="export">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="program" maxOccurs="1" minOccurs="1"
					type="program"></xs:element>
				<xs:element name="config" maxOccurs="1" minOccurs="1"
					type="config"></xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="block_set">
		<xs:complexType>
            <xs:sequence>
                <xs:element name="instance" maxOccurs="unbounded" type="instance"></xs:element>
            </xs:sequence>
            <xs:attribute name="robottype" type="xs:string" default="ev3" use="optional" />
            <xs:attribute name="xmlversion" type="xs:string" default="3.1" use="optional" />
            <xs:attribute name="description" type="xs:string" default="" use="optional" />
            <xs:attribute name="tags" type="xs:string" default="" use="optional" />
        </xs:complexType>
	</xs:element>

	<xs:complexType name="program">
		<xs:sequence>
			<xs:element ref="block_set" minOccurs="1" maxOccurs="1" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="config">
		<xs:sequence>
			<xs:element ref="block_set" minOccurs="1" maxOccurs="1" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="instance">
		<xs:sequence>
			<xs:element name="block" maxOccurs="unbounded"
				type="block" />
		</xs:sequence>
		<xs:attribute name="x" type="xs:string" />
		<xs:attribute name="y" type="xs:string" />
	</xs:complexType>

	<xs:complexType name="block">
		<xs:sequence>
			<xs:element name="mutation" minOccurs="0" type="mutation" />
			<xs:element name="field" minOccurs="0"
				maxOccurs="unbounded" type="field" />
			<xs:element name="repetitions" minOccurs="0"
				type="repetitions" />
			<xs:element name="comment" minOccurs="0" type="comment" />
			<xs:element name="error" minOccurs="0" maxOccurs="1"
				type="error" />
			<xs:element name="warning" minOccurs="0" maxOccurs="1"
				type="warning" />
			<xs:element name="data" minOccurs="0" maxOccurs="1"
				type="data" />
			<xs:element name="hide" minOccurs="0"
				maxOccurs="unbounded" type="hide"/>
			<xs:element name="value" minOccurs="0"
				maxOccurs="unbounded" type="value" />
			<xs:element name="statement" minOccurs="0"
				maxOccurs="unbounded" type="statement" />

		</xs:sequence>
		<xs:attribute name="x" type="xs:string" use="optional" />
		<xs:attribute name="y" type="xs:string" use="optional" />
		<xs:attribute name="type" type="xs:string" use="required" />
		<xs:attribute name="id" type="xs:string" use="required" />
		<xs:attribute name="inline" type="xs:boolean"
			use="optional" />
		<xs:attribute name="collapsed" type="xs:boolean"
			use="optional" />
		<xs:attribute name="disabled" type="xs:boolean"
			use="optional" />
		<xs:attribute name="intask" type="xs:boolean"
			use="optional" />
		<xs:attribute name="deletable" type="xs:boolean"
			use="optional" />
		<xs:attribute name="movable" type="xs:boolean"
			use="optional" />
		<xs:attribute name="shadow" type="xs:boolean"
			use="optional" />
		<xs:attribute name="editable" type="xs:boolean"
			use="optional" />
		<xs:attribute name="error_attribute" type="xs:boolean"
			use="optional" />
	</xs:complexType>
	<xs:complexType name="field">
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="name" type="xs:string"
					use="required" />
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:complexType name="data">
		<xs:simpleContent>
			<xs:extension base="xs:string">
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:complexType name="error">
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="pinned" type="xs:boolean"
					use="required" />
				<xs:attribute name="h" type="xs:string" use="required" />
				<xs:attribute name="w" type="xs:string" use="required" />
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:complexType name="warning">
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="pinned" type="xs:boolean"
					use="required" />
				<xs:attribute name="h" type="xs:string" use="required" />
				<xs:attribute name="w" type="xs:string" use="required" />
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:complexType name="comment">
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="pinned" type="xs:boolean"
					use="required" />
				<xs:attribute name="h" type="xs:string" use="required" />
				<xs:attribute name="w" type="xs:string" use="required" />
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:complexType name="value">
		<xs:sequence>
			<xs:element name="shadow" minOccurs="0" maxOccurs="1"
				type="shadow" />
			<xs:element name="block" minOccurs="0" maxOccurs="1"
				type="block" />
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required" />
	</xs:complexType>
	<xs:complexType name="statement">
		<xs:sequence>
			<xs:element name="block" maxOccurs="unbounded"
				type="block" />
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required" />
	</xs:complexType>
	<xs:complexType name="repetitions">
		<xs:sequence minOccurs="0" maxOccurs="unbounded">
			<xs:element name="value" minOccurs="0"
				maxOccurs="unbounded" type="value" />
			<xs:element name="statement" minOccurs="0"
				maxOccurs="unbounded" type="statement" />
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="mutation">
		<xs:sequence>
			<xs:element name="arg" minOccurs="0" maxOccurs="unbounded"
				type="arg" />
		</xs:sequence>
		<xs:attribute name="elseif" type="xs:integer"
			use="optional" />
		<xs:attribute name="op" type="xs:string" use="optional" />
		<xs:attribute name="else" type="xs:integer"
			use="optional" />
		<xs:attribute name="value" type="xs:integer"
			use="optional" />
		<xs:attribute name="items" type="xs:integer"
			use="optional" />
		<xs:attribute name="wait" type="xs:integer"
			use="optional" />
		<xs:attribute name="at" type="xs:boolean" use="optional" />
		<xs:attribute name="at1" type="xs:boolean" use="optional" />
		<xs:attribute name="at2" type="xs:boolean" use="optional" />
		<xs:attribute name="statement" type="xs:boolean"
			use="optional" />
		<xs:attribute name="divisor_input" type="xs:boolean"
			use="optional" />
		<xs:attribute name="next" type="xs:boolean"
			use="optional" />
		<xs:attribute name="declare" type="xs:boolean"
			use="optional" />
		<xs:attribute name="input" type="xs:string"
			use="optional" />
		<xs:attribute name="datatype" type="xs:string"
			use="optional" />
		<xs:attribute name="declaration_type" type="xs:string"
			use="optional" />
		<xs:attribute name="list_type" type="xs:string"
			use="optional" />
		<xs:attribute name="return_type" type="xs:string"
			use="optional" />
		<xs:attribute name="operator_range" type="xs:string"
			use="optional" />
		<xs:attribute name="mode" type="xs:string" use="optional" />
		<xs:attribute name="port" type="xs:string" use="optional" />
		<xs:attribute name="name" type="xs:string" use="optional" />
		<xs:attribute name="output_type" type="xs:string"
			use="optional" />
		<xs:attribute name="type" type="xs:string" use="optional" />
		<xs:attribute name="protocol" type="xs:string"
			use="optional" />
	</xs:complexType>
	<xs:complexType name="arg">
		<xs:attribute name="name" type="xs:string" />
		<xs:attribute name="type" type="xs:string" use="optional" />
	</xs:complexType>
	<xs:complexType name="shadow">
		<xs:sequence>
			<xs:element name="field" minOccurs="0" maxOccurs="1"
				type="field" />
		</xs:sequence>
		<xs:attribute name="type" type="xs:string" use="required" />
		<xs:attribute name="id" type="xs:string" use="required" />
		<xs:attribute name="intask" type="xs:boolean"
			use="optional" />
	</xs:complexType>
	<xs:complexType name="hide">
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="value" type="xs:string" use="required"/>
	</xs:complexType>
</xs:schema>

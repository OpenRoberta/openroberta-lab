    <!-- If no profile specified on maven install, create develop version of the menu -->
    <profiles>
        <profile>
            <!-- Deployment profile. Do not modify! -->
            <id>live</id>
            <properties>
                <robot.serveraddress>lab.open-roberta.org</robot.serveraddress>
            </properties>
        </profile>
        <profile>
            <!-- Modify this profile for usage with your local server installation. -->
            <id>custom</id>
            <properties>
                <robot.serveraddress>192.168.2.2:1999</robot.serveraddress>
            </properties>
        </profile>
    </profiles>
    <properties>
		<!-- the server and the crosscompiler SHOULD be compatible between(including) the following two versions of software deployed on the ROBOT -->
        <validversionrange.From>1.3.2</validversionrange.From>
        <validversionrange.To>1.3.2</validversionrange.To>
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm:ss</maven.build.timestamp.format>
        <buildTimeStamp>${maven.build.timestamp}</buildTimeStamp>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <source.level>1.7</source.level>
        <maven.compiler.target>1.7</maven.compiler.target>
